
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OsarPasar - Login Page</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        if (ViewBag.HideRegister == true && ViewBag.HideLogin == false)
        {
            @Html.Partial("_PartialLogin")
        }

    }

    @using (Html.BeginForm("Registration", "Login", FormMethod.Post))
    {
        if (ViewBag.HideRegister == false && ViewBag.HideLogin == true)
        {
            @Html.Partial("_PartialRegister")
        }
    }
</body>


</html>


