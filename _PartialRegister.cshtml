@using (Html.BeginForm("Login", "Register", FormMethod.Post))
{
    <div id="divPartialLogin" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div><img src="~/CompanyImages/OsarPasar_CompanyLogo.png" /></div>
                <div style="text-align:right;"><h4 class="modal-title" id="myModalLabel">Welcome to <span class="text-success">OsarPasar</span></h4></div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="well">
                            <div class="form-group">
                                <label for="fullname" class="control-label">Fullname</label>
                                <input type="text" class="form-control" id="fullname" name="fullname" value="" required="" title="Please enter you fullname" placeholder="">
                                <span class="help-block"></span>
                            </div>
                            <div class="form-group">
                                <label for="email" class="control-label">Email</label>
                                <input type="text" class="form-control" id="email" name="email" value="" required="" title="Please enter you email" placeholder="example@gmail.com">
                                <span class="help-block"></span>
                            </div>
                            <div class="form-group">
                                <label for="username" class="control-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" value="" required="" title="Please enter you username" placeholder="">
                                <span class="help-block"></span>
                            </div>
                            <div class="form-group">
                                <label for="password" class="control-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" value="" required="" title="Please enter your password" placeholder="*******">
                                <span class="help-block"></span>
                            </div>
                            <div class="form-group">
                                <label for="password" class="control-label">Password Confirmation</label>
                                <input type="password" class="form-control" id="password" name="password" value="" required="" title="Please retype your password" placeholder="*******">
                                <span class="help-block"></span>
                            </div>
                            <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>
                            <button type="submit" class="btn btn-success btn-block">SignUp</button>
                            <a href="/Login/Login" class="btn btn-default btn-block">Go to Login</a>

                        </div>
                    </div>
                    <div class="col-xs-6">
                        <p class="lead">Vehicles ...</p>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="fa fa-check text-success"></span> Rent</li>
                            <li><span class="fa fa-check text-success"></span> Sell</li>
                            <li><span class="fa fa-check text-success"></span> Reserve</li>
                        </ul>
                        <p class="lead">Packages ...</p>
                        <ul class="list-unstyled" style="line-height: 2">
                            <li><span class="fa fa-check text-success"></span> Send</li>
                            <li><span class="fa fa-check text-success"></span> Track</li>
                        </ul>
                        <br />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <p>&copy;2018, OsarPasar.com.<p />
            </div>
        </div>
    </div>
}

